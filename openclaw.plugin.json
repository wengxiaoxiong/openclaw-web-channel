{
  "id": "web-channel",
  "channels": ["web-channel", "atypica-web"],
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "enabled": {
        "type": "boolean",
        "default": true
      },
      "name": {
        "type": "string"
      },
      "webhookUrl": {
        "type": "string"
      },
      "apiSecret": {
        "type": "string"
      },
      "inboundApiKey": {
        "type": "string"
      },
      "allowFrom": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "accounts": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "name": { "type": "string" },
            "webhookUrl": { "type": "string" },
            "apiSecret": { "type": "string" },
            "inboundApiKey": { "type": "string" },
            "allowFrom": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    }
  },
  "uiHints": {
    "enabled": {
      "label": "Enabled",
      "help": "Enable the web-channel plugin"
    },
    "name": {
      "label": "Account Name",
      "placeholder": "My Web Channel"
    },
    "webhookUrl": {
      "label": "Webhook URL",
      "placeholder": "https://your-app.com/webhook",
      "help": "URL to push assistant replies to"
    },
    "apiSecret": {
      "label": "API Secret",
      "sensitive": true,
      "help": "Secret key for webhook authorization"
    },
    "inboundApiKey": {
      "label": "Inbound API Key",
      "sensitive": true,
      "help": "API key for authenticating inbound requests (sent in Authorization header)"
    },
    "allowFrom": {
      "label": "Allowed Senders",
      "help": "List of allowed user IDs (empty = allow all)"
    }
  }
}
